<%- include("template/header") %>
<%- include("template/navbar") %>
<%- include("template/aside") %> 

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%- include('template/breadcrumb', {module: 'Editar Persona'}) %>
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-md-12">
            <% if (person) { %>
          
              <div class="container">   
                <div class="row">
                  <div class="col-md-6 l-form">
                    <form action="/updatePerson" method="POST">
                      <div class="mb-3 formulario__div">     
                        <label for="dni_persona" class="form-label">DNI</label>
                        <input type="number" class="form-control" id="dni_persona" name="dni_persona" value="<%= person.dni_persona %>" tabindex="1" autofocus>
                      </div>
                      <div class="mb-3" >
                        <label for="nombre_persona" class="form-label">Nombre Persona</label>
                        <input type="text" class="form-control" id="nombre_persona" name="nombre_persona" value="<%= person.nombre_persona %>" tabindex="1" autofocus>              
                      </div>
                      <div class="mb-3">
                        <label for="apellido_paterno" class="form-label">Apellido Paterno</label>
                        <input type="text" class="form-control" id="apellido_paterno" name="apellido_paterno" value="<%= person.apellido_paterno %>" tabindex="1" autofocus>              
                      </div>
                      <div class="mb-3">
                        <label for="apellido_materno" class="form-label">Apellido Materno</label>
                        <input type="text" class="form-control" id="apellido_materno" name="apellido_materno" value="<%= person.apellido_materno %>" tabindex="1" autofocus>              
                      </div>
                      <div class="mb-3">
                        <label for="telefono" class="form-label">Telefono</label>
                        <input type="number" class="form-control" id="telefono" name="telefono" value="<%= person.telefono %>" tabindex="1" autofocus>              
                      </div>
                      <div class="mb-3">
                        <label for="correo_electronico" class="form-label">Correo Electronico</label>
                        <input type="text" class="form-control" id="correo_electronico" name="correo_electronico" value="<%= person.correo_electronico %>" tabindex="2">
                      </div>
                      <div class="mb-3">
                        <label for="direccion_persona" class="form-label">Direccion</label>
                        <input type="text" class="form-control" id="direccion_persona" name="direccion_persona" value="<%= person.direccion_persona %>" tabindex="2">
                      </div>                      
                      <button onclick="editar();" type="submit" class="btn btn-primary" tabindex="4">Submit</button>
                      <a href="/persons" class="btn btn-secondary">Cancel</a>
                      
                    </form>
                  </div>   
                </div>  
              </div>
          
          <% } %>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
  <%- include("template/footer") %>