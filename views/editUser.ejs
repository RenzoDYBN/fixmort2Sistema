<%- include("template/header") %>
<%- include("template/navbar") %>
<%- include("template/aside") %> 

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%- include('template/breadcrumb', {module: 'Editar Usuario'}) %>
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-md-12">
            <% if (user) { %>
          
              <div class="container">   
                <div class="row">
                  <div class="col-md-6">
                    <form action="/updateUser" method="POST">
                      <input hidden id="usuario" name="usuario" value="<%= user.usuario %>">
                      <div class="mb-3">
                        <label for="dni_persona" class="form-label">DNI</label>
                        <input type="number" class="form-control" id="dni_persona" name="dni_persona" value="<%= user.dni_persona %>" tabindex="1" disabled>              
                      </div>
                      <div class="mb-3">
                        <label for="pass" class="form-label">Contrase√±a</label>
                        <input type="password" class="form-control" id="pass" name="pass" value="<%= user.pass %>" tabindex="2">
                      </div>    
                      <div class="mb-3">
                        <select id="codigo_rol" name="codigo_rol" class="form-select" tabindex="3">
                          <option <%= user.codigo_rol=='1' ? 'selected' : '' %> value="1">Administrador</option>
                          <option <%= user.codigo_rol=='2' ? 'selected' : '' %> value="2">Produccion</option>
                        </select>
                      </div>
                      <div class="mb-3">
                        <select id="estado_usuario" name="estado_usuario" class="form-select" tabindex="3">
                          <option <%= user.estado_usuario=='Activo' ? 'selected' : '' %> value="Activo">Activo</option>
                          <option <%= user.estado_usuario=='Desactivado' ? 'selected' : '' %> value="Desactivado">Desactivado</option>
                        </select>
                      </div>
                      <button onclick="editar();" type="submit" class="btn btn-primary" tabindex="4">Editar Usuario</button>
                      <a href="/users" class="btn btn-secondary">Cancelar</a>
                    </form>
                  </div>   
                </div>  
              </div>
          
          <% } %>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
  <%- include("template/footer") %>