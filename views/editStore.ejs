<%- include("template/header") %>
<%- include("template/navbar") %>
<%- include("template/aside") %> 

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%- include('template/breadcrumb', {module: 'Edit store'}) %>
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-md-12">
            <% if (store) { %>

              <div class="container">   
                <div class="row">
                  <div class="col-md-6">
                    <form action="/updateStore" method="POST">
                      <input hidden id="id_pieza" name="id_pieza" value="<%= store.id_pieza %>">
                      <div class="mb-3">
                        <label for="dni_persona" class="form-label">Nombre pieza</label>
                        <input type="text" class="form-control" id="nombre_pieza" name="nombre_pieza" value="<%= store.nombre_pieza %>" tabindex="1" autofocus>              
                      </div>
                      <div class="mb-3">
                        <label for="pass" class="form-label">Descripcion pieza</label>
                        <input type="text" class="form-control" id="descripcion_pieza" name="descripcion_pieza" value="<%= store.descripcion_pieza %>" tabindex="2">
                      </div>  
                      <div class="mb-3">
                        <label for="pass" class="form-label">Stock</label>
                        <input type="text" class="form-control" id="stock_piezas" name="stock_piezas" value="<%= store.stock_piezas %>" tabindex="2">
                      </div>    
                      <button onclick="editar();" type="submit" class="btn btn-primary" tabindex="4">Editar</button>
                      <a href="/store" class="btn btn-secondary">Cancelar</a>
                    </form>
                  </div>
                  </div>   
                </div>  
              </div>
          
          <% } %>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
  <%- include("template/footer") %>